<h1><%= @product.name %></h1>

<div class='row'>
  <div class="col-md-6">
    <%= image_tag(@product.image_url, width: '80%') if @product.image.present? %>
  </div>

  <div class="col-md-6">
    <p><b>Type: </b><%= @product.type.description %></p>
    <p><b>Level: </b><%= @product.level.description %></p>
    <p><b>Price: </b>$<%= @product.price %></p>
    <p><b>Description: </b><%= @product.description %></p>
    <p>
      <%= link_to 'Back', products_path, class: "btn btn-primary", role: "button" %>
      <%= link_to 'Add to Shopping Cart', add_to_shopping_cart_product_path(@product), method: :post, class: "btn btn-primary", role: "button" %>
    </p>
  </div>
</div>
